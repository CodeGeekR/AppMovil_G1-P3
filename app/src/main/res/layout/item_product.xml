<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app= "http://schemas.android.com/apk/res-auto"
    xmlns:tool = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="2dp"
    app:shapeAppearanceOverlay="@style/roundedCards"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3F5D4">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_product_photo"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            tool:src="@drawable/logokama"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/work_sans_semibold"
            android:textColor="#020202"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintLeft_toRightOf="@id/item_product_photo"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Producto de prueva">

        </TextView>

        <TextView
            android:id="@+id/item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:typeface="normal"
            android:layout_marginVertical="20dp"
            app:layout_constraintLeft_toRightOf="@id/item_product_mone"
            app:layout_constraintTop_toBottomOf="@id/item_product_name"
            tool:text="10000">

        </TextView>
        <TextView
            android:id="@+id/item_product_mone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:typeface="normal"
            android:layout_marginVertical="20dp"

            app:layout_constraintLeft_toRightOf="@id/item_product_photo"
            app:layout_constraintTop_toBottomOf="@id/item_product_name"
            android:text="COl:">


        </TextView>
        <TextView
            android:id="@+id/item_product_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="#020202"
            android:textSize="14sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toRightOf="@id/item_product_photo"
            app:layout_constraintTop_toBottomOf="@id/item_product_price"
            android:layout_marginHorizontal="5dp"
            tool:text="Categora">


        </TextView>






    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>