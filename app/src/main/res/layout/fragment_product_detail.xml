<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProductDetailFragment">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageproductdetail"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:shapeAppearanceOverlay="@style/roundedImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            tools:src="@drawable/logokama"
            android:scaleType="centerInside"
            />

    <TextView
        android:id="@+id/titleproductdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/lato_black"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageproductdetail"
        tools:text="asdaadsad"></TextView>

    <TextView
        android:id="@+id/typepriceproducdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/lato_black"
        android:text="COL:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/priceproducdetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleproductdetail" />

    <TextView
        android:id="@+id/priceproducdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/lato_black"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/typepriceproducdetail"

        app:layout_constraintTop_toBottomOf="@id/titleproductdetail"
        tools:text="asdaadsad"/>
    <TextView
        android:id="@+id/descrptiontitleproducdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/lato_black"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/priceproducdetail"
        android:text="Detalles del Producto"/>

    <TextView
        android:id="@+id/descrptionproducdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/descrptiontitleproducdetail"
        tools:text="Detalles del Producto"/>





</androidx.constraintlayout.widget.ConstraintLayout>